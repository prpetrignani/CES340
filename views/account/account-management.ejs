<% if (title) { %>
    <h1><%= title %></h1>
<% }else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
<% } %>

<div class="management-card" id="acc-card">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in</p>
    <a href="../../account/update-account/<%= locals.accountData.account_id %>">Update My Information</a>

    <% if(locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
        <h3>Inventory Management</h3>
        <p><a href="../../inv/">Manage Inventory</a></p>
    <% } %>
    <% if(locals.accountData.account_type === "Client") { %>
    <div class="reviews-cont">
        <h2>My Reviews</h2>
        <%- accountReviews %>
    </div>
    <% } %>
</div>